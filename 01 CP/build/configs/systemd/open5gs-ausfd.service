[Unit]
Description=Open5GS AUSF Daemon
After=network-online.target

[Service]
Type=simple

User=open5gs
Group=open5gs

Restart=always
ExecStart=/home/demo/open5gs/install/bin/open5gs-ausfd -c /home/demo/open5gs/install/etc/open5gs/ausf.yaml
RestartSec=2
RestartPreventExitStatus=1
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target
