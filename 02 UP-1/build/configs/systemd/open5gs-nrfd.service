[Unit]
Description=Open5GS NRF Daemon
Wants=mongodb.service mongod.service

[Service]
Type=simple

User=open5gs
Group=open5gs

Restart=always
ExecStart=/home/up/Desktop/open5gs/install/bin/open5gs-nrfd -c /home/up/Desktop/open5gs/install/etc/open5gs/nrf.yaml
RestartSec=2
RestartPreventExitStatus=1
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target
